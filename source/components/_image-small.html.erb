<div class="image-small" data-toggle="modal" data-target= .<%= id  %>>
  <div class="image-small__image" >
    <%= image_tag image %>
  </div>

  <div class="image-small__text margin2 margin-bottom2">
    <p><strong><%=  title %> </strong></p>
    <p class="image-small__text--paragraph"><%= text  %></p>
  </div>

   <i class="fas fa-plus primary image-small__icon"></i>
</div>


<div class="modal fade bd-example-modal-lg <%= id  %>" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
        <div class="image-modal-header">
        <button type="button" class="close close-button" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        </div>
      <div class="image-modal" >
        <div class="image-modal__image" >
          <%= image_tag image %>
        </div>
        <div class="image-modal__text ">
          <p><strong><%=  title %> </strong></p>
          <p><%= text  %></p>
        </div>
      </div>

    </div>
  </div>
</div>

